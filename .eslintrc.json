{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "react-app",
        "prettier"
    ],
    "parserOptions": {

        "ecmaVersion": 12
    },
    "plugins": [
        "react", "prettier"
    ],
    "rules": {
        "prettier/prettier": [ 
            "error",
            {
                "printWidth": 80,
                "tabWidth": 2,
                "trailingComma": "es5",
                "semi": true,
                "jsxBracketSameLine": false,
                "arrowParens": "always",
                "jsxSingleQuote": false,
                "singleQuote": true
            }
        ]
    }
}
